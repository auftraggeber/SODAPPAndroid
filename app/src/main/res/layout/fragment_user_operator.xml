<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".ui.fragment.UserOperatorFragment"
              android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <TextView
            android:text="@string/dein_operator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/fragUserOperator_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:background="@color/cardview_dark_background">
        <ImageView
                android:layout_height="50dp"
                android:id="@+id/fragUserOperator_image"
                android:layout_width="50dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/fragUserOperator_name"
                android:gravity="center" android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"/>
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             tools:context=".BlankFragment" android:background="@color/cardview_dark_background">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:layout_width="100dp"
                android:layout_height="56.25dp" tools:src="@tools:sample/avatars" android:id="@+id/fragMapListItem_image"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/hello_blank_fragment" android:id="@+id/fragMapListItem_title"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/fragMapListItem_count" android:layout_weight="1"
                android:gravity="right|center_vertical" android:layout_marginRight="@dimen/activity_horizontal_margin"/>
    </LinearLayout>

</FrameLayout>